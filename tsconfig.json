{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "declaration": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "allowJs": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "lib": ["ES2015"]
  },
  "files": ["global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
